<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
    <style>
      .buttons {
        display: flex;
        gap: 2px;
      }
    </style>
  </head>
  <body>
    <h1>All Chats</h1>
    <form method="get" action="/chats/new">
      <button>New Chat</button>
    </form>
    <% for (const chat of chats) { %>
    <div class="chat">
      <p>To : <i><%= chat.to %></i></p>

      <p>From : <i><%= chat.form %></i></p>
      <div class="message">
        <p>Message : <%= chat.message %></p>
        <div class="buttons">
          <form action="/chats/<%= chat._id %>/edit" method="get">
            <button>edit</button>
          </form>
          <form action="/chats/<%= chat._id %>?_method=delete" method="post">
            <button>delete</button>
          </form>
        </div>
      </div>
      <p><%= chat.createdAt.toString().split(" ")[4] %></p>
      <hr />
      <p><%= chat.createdAt.toString().split(" ").slice(0, 4).join(" ") %></p>
    </div>
    <hr />
    <% } %>
  </body>
</html>
